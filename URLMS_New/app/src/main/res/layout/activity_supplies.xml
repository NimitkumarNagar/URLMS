<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a8100c465cc1f39b1885858aa993e31c"
    tools:context="com.urlms.urlms_new.Supplies.Supplies"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/trackSuppliesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Supplies"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/addSuppliesButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addSuppliesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Supplies"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/removeSuppliesButton"
        app:layout_constraintTop_toBottomOf="@+id/trackSuppliesButton" />

    <Button
        android:id="@+id/removeSuppliesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Supplies"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/addSuppliesButton" />
</android.support.constraint.ConstraintLayout>
